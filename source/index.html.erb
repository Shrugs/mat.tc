<main class="container">
  <div class="row">
    <div class="four columns">
      <%= image_tag 'me.jpg', class: 'u-max-full-width' %>
    </div>
    <div class="twelve columns name-container">
      <h1>Matt Condon</h1>
      <div class="link-row">
        <ul>
          <li>Decentralized Tech Advisor</li>
          <li>Building <a href="https://truebit.io">Truebit</a>, <a href="https://XLNT.co">XLNT</a>, <a href="https://betterpath.com">Betterpath</a></li>
          <li>Tech + Comedy</li>
        </ul>
      </div>
    </div>
  </div>
  <nav class="row">
    <div class="column link-row">
      <ul>
        <li>Blockchain Technologist</li>
        <li>Solutions Architect</li>
        <li>Software Engineer</li>
      </ul>
      <ul>
        <li>
          <%= mail_to 'm@cond.in' %>
        </li>
        <li>
          <%= link_to 'github.com/Shrugs', 'https://github.com/Shrugs' %>
        </li>
        <li>
          <%= link_to 'twitter.com/mattgcondon', 'https://twitter.com/mattgcondon' %>
        </li>
      </ul>
      <ul>
        <li>
          <%= link_to 'blog.mat.tc', 'https://blog.mat.tc' %>
        </li>
        <li>
          <%= link_to 'medium.com/@mattcondon', 'https://medium.com/@mattcondon' %>
        </li>
        <li>
          <%= link_to 'resume.pdf', 'resume.pdf' %>
        </li>
      </ul>
    </div>
  </nav>

  <% data.projects.each do |title, projects| %>
    <div class="row">
      <div class="column">
        <h2><%= title %></h2>
      </div>
    </div>
    <% projects.each_slice(3) do |projectSet| %>
      <div class="row hidden-sm-flex">
        <% projectSet.each do |project| %>
          <div class="col image-col project-col">
            <% link_to project.link do %>
              <%= image_tag project.img, class: 'u-max-full-width' %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="row">
        <% projectSet.each do |project| %>
          <div class="col project-col">
            <div class="image-col visible-sm">
              <% link_to project.link do %>
                <%= image_tag project.img, class: 'u-max-full-width' %>
              <% end %>
            </div>
            <h3><%= project.title %></h3>
            <p><%= project.desc %></p>
            <% if project.extra %>
              <ul>
                <% project.extra.each do |extra| %>
                  <li><%= link_to extra.name, extra.link %></li>
                <% end %>
              </ul>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</main>
